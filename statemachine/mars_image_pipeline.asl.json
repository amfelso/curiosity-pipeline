{
  "Comment": "An example of the Amazon States Language using a choice state.",
  "StartAt": "Fetch Mars Images",
  "States": {
    "Fetch Mars Images": {
      "Type": "Task",
      "Resource": "${FetchImagesFunctionArn}",
      "Retry": [
        {
          "ErrorEquals": [
            "States.TaskFailed"
          ],
          "IntervalSeconds": 15,
          "MaxAttempts": 1,
          "BackoffRate": 1.5
        }
      ],
      "Next": "Process Mars Image Metadata"
    },
    "Process Mars Image Metadata": {
      "Type": "Task",
      "Resource": "${ProcessMetadataFunctionArn}",
      "Retry": [
        {
          "ErrorEquals": [
            "States.TaskFailed"
          ],
          "IntervalSeconds": 2,
          "MaxAttempts": 1,
          "BackoffRate": 1
        }
      ],
      "Next": "Generate Mars Image Embedding"
    },
    "Generate Mars Image Embedding": {
      "Type": "Task",
      "Resource": "${GenerateEmbeddingsFunctionArn}",
      "Retry": [
        {
          "ErrorEquals": [
            "States.TaskFailed"
          ],
          "IntervalSeconds": 2,
          "MaxAttempts": 1,
          "BackoffRate": 1
        }
      ],
      "Next": "Record Transaction"
    },
    "Record Transaction": {
      "Type": "Task",
      "Resource": "${DDBPutItem}",
      "Parameters": {
        "TableName": "${DDBTransactionTable}",
        "Item": {
          "Id": {
            "S.$": "$.id"
          },
          "Type": {
            "S.$": "$.type"
          },
          "Price": {
            "N.$": "$.price"
          },
          "Quantity": {
            "N.$": "$.qty"
          },
          "Timestamp": {
            "S.$": "$.timestamp"
          }
        }
      },
      "Retry": [
        {
          "ErrorEquals": [
            "States.TaskFailed"
          ],
          "IntervalSeconds": 20,
          "MaxAttempts": 5,
          "BackoffRate": 10
        }
      ],
      "End": true
    }
  }
}